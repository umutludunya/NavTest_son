<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ec101b" />
            <gradient android:angle="-90" android:startColor="#c90003" android:endColor="#d70205"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#c90003" />
            <solid android:color="#d70205"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#d70205" />
            <gradient android:angle="-90" android:startColor="#ec101b" android:endColor="#c90003" />
        </shape>
    </item>

</selector>